<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:paddingTop="@dimen/space_20"
    android:background="@drawable/business_commodity_item_dialog">

    <ImageView
        android:layout_width="@dimen/space_50"
        android:layout_height="@dimen/space_50"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="beta_title"
        android:layout_marginTop="@dimen/space_10"
        android:layout_gravity="center"
        android:textSize="@dimen/text_size_18"
        android:text=""/>

    <TextView
        android:id="@+id/tv_beta_upgrade_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:tag="beta_upgrade_info"
        android:textSize="@dimen/text_size_14"
        android:textColor="#A4A4A4"
        android:text=""/>

    <TextView
        android:id="@+id/tv_beta_upgrade_feature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_5"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:textSize="@dimen/text_size_14"
        android:tag="beta_upgrade_feature"
        android:text=""/>

    <LinearLayout
        android:id="@+id/ll_download_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/prograssBar_download"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_5"
            android:text="0%"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/space_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_beta_cancel_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"
            android:textSize="@dimen/text_size_18"
            android:visibility="visible"
            android:tag="beta_cancel_button"
            android:textColor="#ffc3c3c3"
            android:text="下次再说"/>

        <TextView
            android:id="@+id/tv_beta_confirm_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"
            android:textSize="@dimen/text_size_18"
            android:tag="beta_confirm_button"
            android:textColor="@android:color/black"
            android:text="立即体验"/>
        
    </LinearLayout>


</LinearLayout>